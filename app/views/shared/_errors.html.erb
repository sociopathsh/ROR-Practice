<div class="row justify-content-center">
  <div class="col-6">
    <% if obj.errors.any? %>
      <div class="jumbotron bg-warning">
        <h2>
          <%= pluralize(obj.errors.count, 'error') %>
        </h2>
        <ul>
          <% obj.errors.full_messages.each do |msg| %>
            <li>
              <%= msg %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

</div>