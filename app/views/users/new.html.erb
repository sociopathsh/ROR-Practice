<%= render 'shared/errors', obj: @user %>

<div class='row justify-content-center'>
  <div class='col-md-8'>
    <h1 class="text-center">Sign Up for Alpha Blog</h1>
    <%= form_for @user do |f| %>

      <div class="form-group row">
        <div class="col-2 col-form-label">
          <%= f.label :Username %>
        </div>
        <div class="col-10">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-2 col-form-label">
          <%= f.label :Email %>
        </div>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-2 col-form-label">
          <%= f.label :Password %>
        </div>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-12">
          <%= f.submit 'Sign Up', class: 'btn btn-primary float-right' %>
        </div>
      </div>

    <% end %>

  </div>

  <div class="col-12 text-center">
    [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
  </div>


</div>